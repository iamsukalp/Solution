<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="24dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/article_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:src="@drawable/ic_docs_file"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/article_title"
        app:layout_constraintStart_toEndOf="@id/article_image"
        app:layout_constraintEnd_toStartOf="@id/article_remove_markBtn"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/article_image"
        android:layout_marginStart="20dp"
        android:text="Title"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/article_user"
        app:layout_constraintStart_toStartOf="@id/article_title"
        app:layout_constraintEnd_toStartOf="@id/article_remove_markBtn"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        android:textSize="14sp"
        android:text="By user"
        android:textColor="@color/primary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/article_remove_markBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/article_image"
        app:layout_constraintBottom_toBottomOf="@id/article_image"
        android:layout_margin="24dp"
        android:src="@drawable/remove_starred"
        android:scaleType="centerInside"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>