<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_grey"
    android:id="@+id/search_doc_layout"
    android:layout_height="match_parent"
    tools:context=".Activities.SearchDocActivity">

    <TextView
        android:id="@+id/search_doc_page_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:text="Search Notes"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/search_doc_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/search_doc_page_title"
        android:layout_marginTop="24dp"
        android:elevation="16dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:background="@color/black"
        android:layout_marginHorizontal="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_gravity="center"
            android:id="@+id/search_doc_searchBar"
            android:hint="Search"
            android:inputType="text"
            android:lines="1"
            android:background="@color/white"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/primary_text"
            android:textColor="@color/primary_text"
            android:textCursorDrawable="@null"
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:paddingVertical="2.5dp"
            android:layout_gravity="center"
            android:id="@+id/search_doc_searchBtn"
            android:src="@drawable/ic_doc_search"
            android:paddingHorizontal="12dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:paddingVertical="2.5dp"
            android:layout_gravity="center"
            android:id="@+id/search_doc_progress"
            android:visibility="gone"
            android:progressTint="@color/primary_color"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/search_doc_viewSwitcher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/search_doc_page_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/search_doc_container"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        
        <LinearLayout
            android:orientation="vertical"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_rawRes="@raw/search_anim"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:adjustViewBounds="true"
                app:lottie_loop="true"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:text="Search for notes by title"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_doc_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </ViewSwitcher>
    
</androidx.constraintlayout.widget.ConstraintLayout>