<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp"
    android:rowCount="2"
    android:columnCount="3"
    android:background="@color/background_grey"
    android:paddingVertical="35dp"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/bottomsheet_camera"
            android:text="Camera"
            android:layout_margin="25dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/bottomsheet_gallery"
            android:text="Gallery"
            android:layout_margin="25dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_gallery__1_" />
        <TextView
            android:id="@+id/bottomsheet_pdf"
            android:text="PDF file"
            android:layout_margin="25dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_pdf" />
        <TextView
            android:id="@+id/bottomsheet_doc"
            android:text="Document"
            android:layout_margin="25dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_documents" />
        <TextView
            android:id="@+id/bottomsheet_url"
            android:text="URL link"
            android:layout_margin="25dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_url" />
    </GridLayout>


