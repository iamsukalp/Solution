<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="24dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/article_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:src="@drawable/ic_docs_file"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/article_title"
        app:layout_constraintStart_toEndOf="@id/article_image"
        app:layout_constraintTop_toTopOf="@id/article_image"
        app:layout_constraintEnd_toStartOf="@id/article_downloadBtn"
        android:layout_marginStart="20dp"
        android:text="Accounting and Taxation workshop"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/article_user"
        app:layout_constraintStart_toStartOf="@id/article_title"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        android:textSize="14sp"
        android:text="Shrestha Kesarwani"
        android:textColor="@color/primary_text"
        android:layout_width="190dp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/article_downloadBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/article_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/article_image"
        app:layout_constraintHorizontal_bias="0.85"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<ImageButton
    android:id="@+id/article_starBtn"
    app:layout_constraintStart_toEndOf="@id/article_downloadBtn"
    app:layout_constraintTop_toTopOf="@id/article_downloadBtn"
    app:layout_constraintBottom_toBottomOf="@id/article_downloadBtn"
    android:layout_marginStart="20dp"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_star"
    />
</androidx.constraintlayout.widget.ConstraintLayout>