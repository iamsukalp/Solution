<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">


    <TextView
        android:id="@+id/profile_page_title"
        android:text="Profile"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_page_title"
        android:transitionName="profile_image"
        android:layout_marginTop="14dp"
        android:layout_width="120dp"
        android:src="@drawable/ic_profile_placeholder"
        android:layout_height="120dp"/>
    <EditText
        app:layout_constraintStart_toStartOf="@id/profile_name"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        android:id="@+id/profile_email"
        android:layout_marginTop="12dp"
        android:hint="email addresses"
        android:background="@color/black"
        android:drawablePadding="10dp"
        android:textColor="@color/primary_text"
        android:textSize="10dp"
        android:textColorHint="@color/primary_text"
        android:drawableStart="@drawable/ic_email"
        android:drawableEnd="@drawable/ic_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
       app:layout_constraintStart_toStartOf="@id/profile_email"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        app:layout_constraintEnd_toEndOf="@id/profile_email"
        android:hint="phone number"
        android:background="@color/black"
        android:drawablePadding="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/primary_text"
        android:textSize="10dp"
        android:textColorHint="@color/primary_text"
        android:id="@+id/profile_phone"
        android:drawableStart="@drawable/ic_smartphone"
        android:drawableEnd="@drawable/ic_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/profile_image_bg"
        app:layout_constraintStart_toStartOf="@id/profile_image"
        app:layout_constraintEnd_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        app:layout_constraintVertical_bias="1.0"
        android:background="#94000000"
        android:layout_width="0dp"
        android:layout_height="35dp"/>

    <ImageView
        android:id="@+id/profile_image_edit_btn"
        app:layout_constraintStart_toStartOf="@+id/profile_image_bg"
        app:layout_constraintEnd_toEndOf="@+id/profile_image_bg"
        app:layout_constraintTop_toTopOf="@+id/profile_image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_bg"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_user"
        android:drawableEnd="@drawable/ic_edit_text_24"
        android:drawablePadding="5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:textColor="@color/primary_text"
        android:text="Profile Name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/profile_applaud_anim"
        app:lottie_rawRes="@raw/applaud_anim"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/profile_applaud_count"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/profile_applaud_anim"
        app:layout_constraintTop_toTopOf="@id/profile_applaud_anim"
        app:layout_constraintBottom_toBottomOf="@id/profile_applaud_anim"
        android:layout_marginStart="45dp"
        android:textColor="@color/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <GridLayout
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_applaud_anim"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_image_tile"
            android:src="@drawable/image_files_tile"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/profile_pdf_tile"
            android:src="@drawable/pdf_file_tile"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/profile_doc_tile"
            android:src="@drawable/doc_file_time"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/profile_url_tile"
            android:src="@drawable/url_file_tile"
            android:layout_marginHorizontal="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>

    </GridLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_saveBtn"
        android:layout_width="0dp"
        android:background="@color/black"
        android:elevation="16dp"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:text="Save profile"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>