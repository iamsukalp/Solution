<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress_dialog_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/waiting_anim"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        app:layout_constraintStart_toEndOf="@id/progress_dialog_anim"
        app:layout_constraintTop_toTopOf="@id/progress_dialog_anim"
        app:layout_constraintBottom_toBottomOf="@id/progress_dialog_anim"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please wait. While we take care of it"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>