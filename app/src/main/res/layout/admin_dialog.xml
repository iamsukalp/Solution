<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:id="@+id/container"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose login method"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/pin_container"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/admin_pin"
                android:hint="Enter pin"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColorHint="@color/primary_text"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/admin_pin_loginBtn"
                android:layout_weight="1"
                android:text="console"
                android:layout_marginStart="15dp"
                android:elevation="16dp"
                android:textAllCaps="false"
                android:outlineAmbientShadowColor="@color/white"
                android:textColor="@color/primary_text"
                android:outlineSpotShadowColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/pin_container"
            android:layout_marginTop="15dp"
            android:text="Or"
            android:textColor="@color/primary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_qrBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pin_container"
            android:layout_marginTop="30dp"
            android:elevation="16dp"
            android:textAllCaps="false"
            android:text="Login with QR"
            android:outlineAmbientShadowColor="@color/white"
            android:textColor="@color/primary_text"
            android:outlineSpotShadowColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonClose"
        android:src="@drawable/ic_close_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:backgroundTint="@color/dark_side"
        app:rippleColor="@null"
        android:elevation="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="24dp"
        app:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>