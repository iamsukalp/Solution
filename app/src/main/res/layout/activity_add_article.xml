<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddArticleActivity">

    <TextView
        android:text="Upload Notes"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/addArticle_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/addArticle_name"
        app:layout_constraintStart_toEndOf="@id/addArticle_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:hint="Title"
        android:paddingVertical="5dp"
        android:textColorHint="@color/primary_text"
        android:textColor="@color/primary_text"
        android:paddingHorizontal="10dp"
        android:background="@drawable/article_et_bg"
        app:layout_constraintTop_toTopOf="@id/addArticle_image"
        app:layout_constraintBottom_toBottomOf="@id/addArticle_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/addArticle_subject"
        app:layout_constraintStart_toStartOf="@id/addArticle_image"
        app:layout_constraintEnd_toEndOf="@id/addArticle_name"
        android:background="@drawable/article_et_bg"
        android:hint="Subject"
        android:paddingVertical="5dp"
        android:textColorHint="@color/primary_text"
        android:textColor="@color/primary_text"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/addArticle_image"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/addArticle_desc"
        app:layout_constraintStart_toStartOf="@id/addArticle_image"
        app:layout_constraintEnd_toEndOf="@id/addArticle_name"
        android:background="@drawable/article_et_bg"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="4"
        android:paddingVertical="5dp"
        android:textColorHint="@color/primary_text"
        android:textColor="@color/primary_text"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/addArticle_subject"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/addArticle_url"
        app:layout_constraintStart_toStartOf="@id/addArticle_image"
        app:layout_constraintEnd_toEndOf="@id/addArticle_name"
        android:textColor="@color/primary_text"
        android:hint="Add Url"
        android:visibility="gone"
        android:textColorHint="@color/primary_text"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/article_et_bg"
        app:layout_constraintTop_toBottomOf="@id/addArticle_desc"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addArticle_Submit"
        app:layout_constraintStart_toStartOf="@id/addArticle_image"
        app:layout_constraintEnd_toEndOf="@id/addArticle_name"
        android:background="@drawable/basic_button_bg"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:elevation="16dp"
        android:text="Submit"
        android:textColor="@color/primary_text"
        android:textAllCaps="false"
        android:letterSpacing="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:layout_width="0dp"
        android:layout_height="34dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>