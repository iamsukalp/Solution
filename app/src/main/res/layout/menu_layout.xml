<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_grey"
    android:paddingVertical="35dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menu_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/s_logo"
        android:layout_marginStart="24dp"
        android:adjustViewBounds="true"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_image"
        android:transitionName="profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
   <TextView
       android:id="@+id/menu_name"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/menu_image"
       android:layout_marginTop="8dp"
       android:textSize="18sp"
       android:textAlignment="center"
       android:textColor="@color/primary_text"
       android:layout_width="0dp"
       android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menu_about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_name"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:text="About us"
        android:textColor="@color/primary_text"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_about_us" />
    <TextView
        android:id="@+id/menu_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_about"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:text="Feedback"
        android:textColor="@color/primary_text"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_feedback" />

    <TextView
        android:id="@+id/menu_join_us"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_feedback"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:text="Join us"
        android:textColor="@color/primary_text"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_join_us" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Logout"
        android:drawableStart="@drawable/ic_logout"
        android:outlineAmbientShadowColor="@color/white"
        android:textColor="@color/primary_text"
        android:outlineSpotShadowColor="@color/white"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/menu_join_us"
        android:layout_marginTop="36dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

   <!-- <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_delete_account"
