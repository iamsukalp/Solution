<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_image_container"
        android:layout_marginTop="24dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_profileImage"
            app:layout_constraintStart_toStartOf="parent"
            android:transitionName="profile_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/home_salutation"
            app:layout_constraintStart_toEndOf="@id/home_profileImage"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/home_profileImage"
            app:layout_constraintBottom_toBottomOf="@id/home_profileImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/content_home" />
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/home_bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_app_bar_menu"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/background_grey"
        app:fabAlignmentMode="center"
        app:navigationIcon="@drawable/ic_menu"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="5dp"
        app:hideOnScroll="true" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/background_grey"
        app:fabSize="normal"
        app:tint="@color/primary_text"
        app:layout_anchor="@id/home_bottomAppBar"
        app:srcCompat="@drawable/ic_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>