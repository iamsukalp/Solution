<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.appsters.flexx.Fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_starFragment"
            app:destination="@id/starFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_homeFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/starFragment"
        android:name="com.appsters.flexx.Fragments.StarFragment"
        android:label="fragment_star"
        tools:layout="@layout/fragment_star" >
        <action
            android:id="@+id/action_starFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/starFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_starFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:popUpTo="@id/starFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/usersFragment"
        android:name="com.appsters.flexx.Fragments.UsersFragment"
        android:label="fragment_users"
        tools:layout="@layout/fragment_users" >
        <action
            android:id="@+id/action_usersFragment_to_starFragment"
            app:destination="@id/starFragment"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_usersFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>